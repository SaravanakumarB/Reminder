<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".screen.detail.ReminderActivity">


        <ImageView
            android:id="@+id/iv_timer"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_150"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_timer" />

        <TextView
            android:id="@+id/tv_food"
            style="@style/Header_Primary_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_10"
            android:textSize="@dimen/size_18sp"
            tools:text="Fruits" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/Normal_Primary_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_20"
            android:textSize="@dimen/size_18sp"
            tools:text="11:00 AM" />

        <TextView
            android:id="@+id/tv_duration"
            style="@style/Header_Primary_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_20"
            android:textSize="@dimen/size_18sp"
            tools:text="20 minutes" />
    </RelativeLayout>
</layout>